@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewData["Title"] = "User List";
}

<h1>User List</h1>

<p>
    @Html.ActionLink("Create New", "Create", "User")
</p>

<!-- Search Form -->
<form asp-action="Search" method="get">
    <input type="text" name="query" placeholder="Search users..." class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<!-- User List -->
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
